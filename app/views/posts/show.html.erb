<h1><%= @post.title %></h1>

<div>
<div class="card mb-3">
<%= cl_image_tag @post.image, :alt => @post.title %>
  <div class="card-body">
    <h5 class="card-title"> <%=@post.title%></h5>
    <p class="card-text"> <%=@post.content%></p>
    <p class="card-text"><small class="text-muted"><%=@post.hashtag%></small></p>
    <p class="card-text"><small class="text-muted"><%=@post.created_at%></small></p>
    <p class="card-text"><small class="text-muted"><%= button_to 'Point', post_points_path(@post), method: :post %></small></p>
    <p class="card-text"><small class="text-muted"><p><%= @post.points.count %> <%= (@post.points.count) == 1 ? 'Point' : 'Points'%></p></small></p>



    <div class="#">
      <% if @current_user.present? %>
      <%= link_to "Edit post", edit_post_path(@post) %>
      <%= link_to "Delete post", @post, :method => 'delete', :data => { :confirm => 'Are you sure?' } %>
      <% end %>
    </div>
  </div>
</div>
<p>comment section below  -- points and comments counter</p>
</div>
