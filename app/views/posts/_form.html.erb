<div class="post_form">
  <% if current_page?(new_post_path) %>
  <h3>New Post</h3>
  <% else %>
  <h3>Edit Post</h3>
  <% end %>
  <%= form_for @post, :html => {:multipart => true} do |f| %>
    <%= f.hidden_field :user_id, :value => @current_user.id %>
  <div class="form-group">
    <%= f.label :title, :class=>"" %>
    <%= f.text_field :title, :required => true, :class=> "form-control"  %>
  </div>
  <div class="form-group">
    <%= f.label :content, "Content (You can resize the input box at the bottom right)" %>
    <%= f.text_area :content, :class=>"form-control"%>
  </div>
  <div class="form-group">
    <%= f.label :image, "Image attachment" %>
    <div><%= f.cl_image_upload :image, :class=>"form-control-file" %></div>
  </div>
  <div class="form-group">
    <%= f.label :hashtag, "Post tags (Leave a space between each tag)" %>
    <%= f.text_field :hashtag, :class=>"form-control" %>
  </div>
  <% if current_page?(new_post_path) %>
  <%= f.submit :class=>"btn createpost_button btn-success"%>
  <% else %>
  <%= f.submit :class=>"btn createpost_button btn-primary"%>
  <% end %>
<% end %>
</div>
