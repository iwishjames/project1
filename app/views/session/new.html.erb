<% if !@current_user.present? %>
<div class="logo_thumb nav_logo_spin">
  <%= image_tag("xplogo.png", :alt => "XP logo", :height => "50px") %>
</div>


<div class="image alert_message gared">
  <%= flash[:error_message] %>
</div>

<div class="login_mainContainer">
<div class="login_container">
<h3>Sign In</h3>

  <%= form_tag login_path do %>
  <div class="form-group">
    <%= label_tag :email %>
    <%= email_field_tag :email, nil, :class => "signup_inputs input_width"%>
  </div>

  <div class="form-group">
      <%= label_tag :password %>
      <%= password_field_tag :password, nil, :class => "signup_inputs input_width" %>
    </div>
<%= submit_tag "Log In", class: "signup_button"%>
<% end %>
<p class ="signin_text">New to XP? <a href="<%= new_user_path %>">Create an account.</a> </p>
</div>
  <div class="image_container">
    <%= image_tag("student.jpg", :alt => "image of student", :height => "560")%>
    <div class="bottom-left">Welcome to XP!</div>
    <div class="bottom-left-small">Your GA Experience shared...</div>
  </div>
</div>
<% end %>


<% if @current_user.present? %>
<div class="login_silly">
<h1>You are already logged in silly!</h1>
<p>You will need to log out of the current account to view the Sign In page.</p>
</div>
<% end %>
