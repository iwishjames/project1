<!DOCTYPE html>
<html>
  <head>
    <title>GA Experience | Knowledge Base</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= cloudinary_js_config %>
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <%= favicon_link_tag asset_path('favicon-32x32.png') %>
  </head>

  <body>
   <% if @current_user.present? %>
    <div class="sticky-top nav_bar">
      <div class="container">
        <div class="row">
          <div class="col nav_spacing">
            <div class="nav_logo">
              <%= link_to root_path do %>
              <%= image_tag("xplogo.png", :alt => "XP logo", :height => "50px") %>
              <h1 class="ga_logotext">GA EXPERIENCE</h1>
              <% end %>
            </div>
          </div>
          <div class="col-6">
            <div class="nav_search">
              <form class="form-inline my-2 my-lg-0">
              <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
              <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
              </form>
            </div>
          </div>
          <div class="col">
            <div class="dropdown">
              <button class="btn btn-danger dropdown-toggle nav_button" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                <% if @current_user.image? %>
                <%= cl_image_tag @current_user.image, :alt => "user profile pic", :class=>"nav_user" %>
                <% end %>
                     <%= @current_user.first_name %> <% if @current_user.last_name? %><%= @current_user.last_name.chars.first %><% end %>

              </button>
              <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuButton">
                <% if @current_user.admin %>
                  <a class="dropdown-item nav_dropdown" <%= link_to "Admin access", users_path %></a>
                <% end %>
                <a class="dropdown-item nav_dropdown" <%= link_to "Create a post", new_post_path %></a>
                <a class="dropdown-item nav_dropdown" <%= link_to "My profile", user_path(@current_user) %></a>
                <a class="dropdown-item nav_dropdown" <%= link_to "Edit my details", edit_user_path %></a>
                <div class="dropdown-divider"></div>
                <a class="dropdown-item nav_dropdown" <%= link_to "Log out", login_path, :method => 'delete' %></a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <% end %>
    <%= yield %>
  </body>
</html>
