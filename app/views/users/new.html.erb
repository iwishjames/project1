<div class="logo_thumb">
  <%= image_tag("xplogo.png", :alt => "XP logo", :height => "50px") %>
</div>

<div class="signup_mainContainer">
<div class="signup_container">
<h3>Create Your Account</h3>
  <%= form_for @user do |f| %>
  <div class="form-row">
    <div class="form-group col-md-5">
      <span class="required_red">* </span><%= f.label :first_name, "First Name"%>
      <%= f.text_field :first_name, autofocus: true, required: true, placeholder: "Sona", :class => "signup_inputs" %>
    </div>
    <div class="form-group col-md-5">
      <%= f.label :last_name, "Last Name"%>
      <%= f.text_field :last_name, placeholder: "Unn", :class => "signup_inputs" %>
    </div>
  </div>
  <div class="form-group">
    <span class="required_red">* </span><%= f.label :email %>
    <%= f.email_field :email, placeholder: "sona@ga.co", :class => "signup_inputs input_width" %>
  </div>
  <div class="form-row">
    <div class="form-group col-md-5">
      <span class="required_red">* </span><%= f.label :password%>
      <%= f.password_field :password, :class => "signup_inputs" %>
    </div>
    <div class="form-group col-md-5">
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation, :class => "signup_inputs" %>
    </div>
  </div>
  <div class="form-group">
    <span class="required_red">* </span><%= f.label :role_type, "Role" %>
    <%= f.select(:role_type, options_for_select([['Student', 'Student'], ['Alumni', 'Alumni']]))%>
  </div>

<div class="form-row">
  <div class="form-group col-md-5">
    <span class="required_red">* </span><%= f.label :student_class, "My Class" %>
    <%= f.text_field :student_class, required: true, placeholder: "SEI6", :class => "signup_inputs"  %>
  </div>
  <div class="form-group col-md-5">
    <%= f.label :mentor_class, "Mentoring Class" %>
    <%= f.text_field :mentor_class, placeholder: "SEI33", :class => "signup_inputs"%>
  </div>
</div>
<div class="form-group">
  <%= f.label :image, "Profile Picture" %>
  <%= f.text_field :image, placeholder: "http://...", :class => "signup_inputs input_width" %>
</div>
<%=f.submit "Sign Up", class: "signup_button"%>
<% end %>
<p class ="signin_text">Already have an account? <a href="<%=login_path%>">Sign in</a> </p>
</div>
    <%= image_tag("student.jpg", :alt => "image of student", :height => "560")%>
</div>
